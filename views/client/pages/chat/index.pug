extends ../../layouts/default.pug

block main

  .container

    include ../../partials/list-btn-users.pug

    div(class="chat" user-id=user.id)
      .inner-body
        each chat in chats
          div(
            class=(
              user.id !== chat.userId ?
              "inner-incoming"
              :
              "inner-outgoing"
            )
          )
            if(user.id !== chat.userId)
              .inner-name #{chat.fullName}
            if(chat.content)
              .inner-content
                | #{chat.content}
            if(chat.images)
              .inner-images 
                each image in chat.images
                  img(src=image)


